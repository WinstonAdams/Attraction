{{> messages}}
<div class="album container">
  <div class="mb-5">
    <div class="row container-md col-md-6 m-auto">
      <div class="signin card card-body">

        <div class="my-3 text-center">
          <h1 class="h3 font-weight-normal mb-3">Sign In</h1>
        </div>
        <form class="form-signin" action="/signin" method="POST">
          <div class="form-row mb-3">
            <label class="form-label" for="email">Email</label>
            <input class="form-control" id="email" type="text" name="email" class="form-control" placeholder="Email"
              required autofocus>
          </div>
          <div class="form-row mb-3">
            <label class="form-label" for="password">Password</label>
            <input class="form-control" id="password" type="password" name="password" class="form-control"
              placeholder="Password" required>
          </div>
          <button class="btn btn-primary btn-block" type="submit">Submit</button>
          <a href="/auth/facebook" class="d-block w-50 my-2 btn btn-info">Facebook sign in</a>
        </form>
        <p class="mt-4">
          Don't Have An Account? <a href="/signup">sign up</a>
        </p>

      </div>
    </div>
  </div>
</div>