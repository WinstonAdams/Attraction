{{> messages}}
<div class="row">
  <div class="col-sm-10">
    <h1 class="text-center">
      <i class="fa-solid fa-house"></i>
    </h1>
    <div id="messages" class="card my-2 overflow-auto" style="max-height: 450px;">
      {{!-- {{#each messages}} --}}
      <div class="card-body">
         name：content <small class="text-body-secondary">time</small>
      </div>
      
      {{!-- {{/each}} --}}
    </div>

    <form id="chat-form" class="d-flex">
      <input id="msg" type="text" placeholder="請輸入你的訊息" class="form-control me-1"><button class="btn btn-primary"><i
          class="fa-regular fa-paper-plane"></i></button>
    </form>
  </div>
</div>