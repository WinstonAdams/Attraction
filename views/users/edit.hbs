{{> messages}}
{{#ifCond user.id searchedUser.id}}
<div class="profile-title">
  <h3>編輯個人資料</h3>
</div>
<div class="row container m-auto d-flex justify-content-center align-items-center" style="width: 35%;">

  <div class="row mt-3">
    <form class="form" action="/users/{{../searchedUser.id}}?_method=PUT" method="POST" style="width: 100%;">
      <div class="mt-3 d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center">
          <div>
            <h5 class="mb-0">名稱 :</h5>
          </div>
        </div>
        <div class="d-flex align-items-center">
          <input class="form-control" name="name" type="text" placeholder="name" value="{{../searchedUser.name}}"
            required autofocus>
        </div>
      </div>
      <div class="mt-3 d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center">
          <div>
            <h5 class="mb-0">Email :</h5>
          </div>
        </div>
        <div class="d-flex align-items-center">
          <input class="form-control" name="email" type="email" placeholder="email" value="{{../searchedUser.email}}"
            required>
        </div>
      </div>
      <div class="mt-3 d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center">
          <div>
            <h5 class="mb-0">密碼 :</h5>
          </div>
        </div>
        <div class="d-flex align-items-center">
          <input class="form-control" name="password" type="password" placeholder="password" required>
        </div>
      </div>
      <div class="mt-3 d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center">
          <div>
            <h5 class="mb-0">密碼確認 :</h5>
          </div>
        </div>
        <div class="d-flex align-items-center">
          <input class="form-control" name="passwordCheck" type="password" placeholder="password check" required>
        </div>
      </div>
      <div class="mt-5 d-flex justify-content-center align-items-center">
        <button class="d-block btn btn-primary btn-block w-25 m-auto" type="submit">送出</button>
      </div>
    </form>

  </div>
</div>
{{/ifCond}}