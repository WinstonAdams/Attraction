{{> messages}}
<div class="profile-title">
  <h3>個人資料</h3>
</div>
<div class="row container m-auto d-flex justify-content-center align-items-center" style="width: 50%;">

  <div class="row mt-3">

    <div class="mt-3 d-flex justify-content-center align-items-center">
      <div class="d-flex align-items-center">
        <div>
          <h5 class="mb-0">名稱 :</h5>
        </div>
      </div>
      <div class="d-flex align-items-center">
        <h5 class="mb-0 mx-3">{{ searchedUser.name }}</h5>
      </div>
    </div>
    <div class="mt-3 d-flex justify-content-center align-items-center">
      <div class="d-flex align-items-center">
        <div>
          <h5 class="mb-0">Email :</h5>
        </div>
      </div>
      <div class="d-flex align-items-center">
        <h5 class="mb-0 mx-3">{{ searchedUser.email }}</h5>
      </div>
    </div>

  </div>
</div>

{{#ifCond user.id searchedUser.id}}
<div class="mt-5 d-flex justify-content-center align-items-center">
  <a href="" class="btn btn-primary mx-2">修改個人資料</a>
</div>
{{/ifCond}}